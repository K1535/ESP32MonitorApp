<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- PERMISO PARA ACCESO A INTERNET -->
    <!-- Necesario para que la WebView pueda conectar con tu ESP32 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ESP32MonitorApp"
        tools:targetApi="31"
        android:networkSecurityConfig="@xml/network_security_config">
        <!-- ¡Referencia al archivo de configuración de seguridad de red! -->

        <!-- SplashActivity, declarada como la actividad de lanzamiento principal -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MainActivity, se lanza desde SplashActivity o Onboarding -->
        <!-- 'exported="false"' es apropiado si esta actividad solo se inicia internamente por tu app -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- Declaración de OnboardingStep1Activity -->
        <activity
            android:name=".OnboardingStep1Activity"
            android:exported="false" />

        <!-- Declaración de OnboardingStep2Activity -->
        <activity
            android:name=".OnboardingStep2Activity"
            android:exported="false" />

        <!-- Declaración de OnboardingStep3Activity -->
        <activity
            android:name=".OnboardingStep3Activity"
            android:exported="false" />

        <!-- Declaración de OnboardingStep4Activity -->
        <activity
            android:name=".OnboardingStep4Activity"
            android:exported="false" />

        <!-- Declaración de FinalActivity -->
        <activity
            android:name=".FinalActivity"
            android:exported="false" />

    </application>

</manifest>
